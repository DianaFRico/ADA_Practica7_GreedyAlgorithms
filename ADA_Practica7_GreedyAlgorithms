#include <stdio.h>
#include <stdlib.h>
#include <string.h>

char* comprimir(const char* word) {
    int n=strlen(word);
    char* resp=(char*)malloc(2*n*sizeof(char));
    int posicion=0;

    for (int i=0; i<n;)
    {
        int j, cant, max;
        j=i+1;
        
        while (j<n && word[j]==word[i]) 
        {
            ++j;
        }
        
        cant=j-i;
        
        while (cant>0)
        {
            if (cant>9) 
                max=9; 
            else 
                max=cant;
                
            resp[posicion++]='0'+max;
            resp[posicion++]=word[i];
            cant=cant-max;
        }
        i=j;
    }
    resp[posicion] = '\0';
    return resp;
}

int main() {
    char word[199999]; //2*10^5
    printf("Palabra:\n\t");
    scanf("%199999s", word); //No colocamos & ya que trabajamos con punteros
    char* wordNew = comprimir(word);
    printf("\nPalabra comprimida: \n\t%s\n", wordNew);
    return 0;
}
